---
// Usage: <GreetingHeadline greeting="Howdy" name="Partner" />
const { audioID,ayah } = Astro.props;
let encAudPath=btoa("https://alim-quran.s3.amazonaws.com/recitation/Alafasy_128kbps/"+audioID+".mp3");
let decAudPath="javascript:playAyahQuran('"+encAudPath+"')";
---
<div style="direction: rtl;">
    <span class="text-4xl text-white" style="line-height: 25px; font-family: myFirstFont;">{ayah}</span>
</div>
<a href={decAudPath}><button class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">Play</button></a>
<br/><br/><br/><br/>